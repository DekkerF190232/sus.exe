struct Test (
  int32 a,
  int32 b
);

{
  print(s:STR"11-refs.sus\n");

  Test test = Test(a=1, b=2);

  PTR[Test] _test = REF(test);
  DRF(_test).a = 123;

  print(s: STR "expected: 123 2, 123 2\n");
  print(i: DRF(_test).a);
  print(s: STR " ");
  print(i: DRF(_test).b);
  print(s: STR ", ");
  print(i: test.a);
  print(s: STR " ");
  print(i: test.b);
  printLn();
}

